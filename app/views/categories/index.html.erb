<section class= "cattt">
<h1 class="title">Categories</h1>
    <% if @categories.exists? %>
      <div>
        <div class="categories">
        <% @categories.each do |category| %>
          <div class="category">
            <%= render category %>
          </div>
        <% end %> 
        </div>
      </div>
    <% else %>
        <h2>My Badget</h2>
        <p>non categories</p>
    <% end %> 
    <div class ="add_category">
        <%= link_to "Add Category", new_category_path %>
    </div>
</section>
